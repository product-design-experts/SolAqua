<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/accent</item>
        <item name="actionBarStyle">@style/AppTheme.NoActionBar</item>
        <item name="snackbarStyle">@style/AppTheme.Snackbar</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Snackbar">
        <item name="android:background">@color/accent</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/bargrey</item>
    </style>

    <style name="DeviceButtons">
        <item name="background">@color/blue</item>
        <item name="color">@color/white</item>
    </style>

</resources>